<Window x:Class="Algorithms.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Algorithms.WpfApp"
        mc:Ignorable="d"
        Title="Algorithms" Height="800" Width="800" ResizeMode="NoResize">
    <Grid Height="800"  Width="800">
        <WrapPanel HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="800">
            <ComboBox x:Name="comboWorkers" Width="120">
                <ComboBoxItem>Points2D</ComboBoxItem>
            </ComboBox>
                <Button x:Name="btnStartWorker" Content="Button" Width="75" Click="btnStartWorker_Click"/>
        </WrapPanel>

        <Canvas x:Name="MainCanvas" HorizontalAlignment="Left" Height="710" Width="800" Top="70" Left="0" Background="Gainsboro">
            <Polyline x:Name="polyline" Stroke="DarkGreen" StrokeThickness="3"/>
        </Canvas>
        <StatusBar HorizontalAlignment="Left" Height="20"  VerticalAlignment="Bottom" Width="800"/>

    </Grid>
</Window>
